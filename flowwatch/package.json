{
  "name": "flowwatch",
  "displayName": "FlowWatch",
  "description": "Real-time file lock and monitoring",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
"activationEvents": [
  "onStartupFinished"
],
"main": "./extension.js",
"contributes": {
  "configuration": {
    "title": "FlowWatch",
    "properties": {
      "flowwatch.user": {
        "type": "string",
        "default": "",
        "description": "User name for file locking"
      },
      "flowwatch.serverUrl": {
        "type": "string",
        "default": "http://localhost:3000",
        "description": "FlowWatch server URL"
      }
    }
  },
    "configurationDefaults": {
      "[json]": {
        "flowwatch.user": "defaultUser",
        "flowwatch.serverUrl": "http://localhost:3000"
      }
    }
},
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
